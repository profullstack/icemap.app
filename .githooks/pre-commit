#!/bin/sh
# Pre-commit hook: runs lint, type check, build, and tests
# Catches issues before they fail on Railway

set -e

echo "ğŸ” Running pre-commit checks..."

# Run from repo root
cd "$(git rev-parse --show-toplevel)"

echo ""
echo "ğŸ“ Running lint..."
pnpm lint

echo ""
echo "ğŸ”¨ Running build..."
pnpm build

echo ""
echo "ğŸ§ª Running tests..."
pnpm test run

echo ""
echo "âœ… All checks passed!"
